{
  "name": "nebula-db",
  "version": "0.4.0",
  "description": "Fast. Flexible. Secure. The embedded database for the modern stack.",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "preinstall": "node ./scripts/check-node-version.js",
    "pretest": "node ./scripts/check-node-version.js",
    "prebuild": "node ./scripts/check-node-version.js",
    "build": "node scripts/build.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage --coverage.provider=v8",
    "test:basic": "node tests/basic-test.js",
    "benchmark": "node benchmark.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,js,json,md}\""
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.1",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitest/coverage-v8": "^3.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "npm-run-all": "^4.1.5",
    "run-script-os": "^1.1.6",
    "typescript": "^5.3.3",
    "vitest": "^3.1.2"
  },
  "dependencies": {
    "better-sqlite3": "^12.0.0"
  }
}
